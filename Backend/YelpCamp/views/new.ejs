<%- include("partials/header") %>

<div style="text-align: center;" class="container">
	<h1>Create a new Campground</h1>
	
	<div style="width: 30%; margin: 20px auto">
		<form action="/campgrounds" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" placeholder="Name" name="campName">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" placeholder="Image URL" name="imageURL">
			</div>
			<div class ="form-group">
				<input class="form-control" type="text" placeholder="Description" name="campDesc">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit!</button>
			</div>
		</form>

		<a href="/campgrounds">Go Back</a>
	</div>
</div>

